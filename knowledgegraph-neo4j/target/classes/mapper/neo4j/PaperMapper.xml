<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.knowledgegraph.neo4j.mapper.PaperMapper">

    <resultMap id="BaseResultMap" type="com.knowledgegraph.neo4j.pojo.Paper">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="publicationYear" column="publication_year" jdbcType="BIGINT"/>
            <result property="conferenceJournal" column="conference_journal" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,title,publication_year,
        conference_journal
    </sql>

    <select id="queryPaperByExpertIdAndAreaId" resultType="com.knowledgegraph.neo4j.pojo.Paper">
        SELECT p.ID, p.title, p.publication_year, p.conference_journal
        FROM
            expert_paper as ep
                LEFT JOIN paper as p ON p.ID = ep.PAPER_ID
        WHERE ep.EXPERT_ID = #{expertId} AND ep.AREA_ID = #{areaId}
    </select>
</mapper>
